{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "types": [
      "webpack-env"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "baseUrl": "./src",
  "paths": {
    "@/*": [
      "/*"
    ],
    "assets/*": [
      "/assets/*"
    ],
    "components/*": [
      "/components/*"
    ],
    "router/*": [
      "/router/*"
    ],
    "store/*": [
      "/store/*"
    ],
    "views/*": [
      "/views/*"
    ],
    "static/*": [
      "/static/*"
    ],
    "utils/*": [
      "/utils/*"
    ]
  }
}